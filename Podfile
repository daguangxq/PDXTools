# platform :ios, '9.0'

target 'PDXTools' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # 获取QMUIKit中相关功能
  pod 'QMUIKit'
  
  # Kingfisher是一个Swift编写的轻量级、纯Swift的图片下载和缓存库，它可以帮助我们快速、高效地加载和缓存图片。
  pod 'Kingfisher'
  
  pod "Weibo_SDK", :git => "https://github.com/sinaweibosdk/weibo_ios_sdk.git"
  pod 'GoogleSignIn'
  pod 'FacebookLogin'
  pod 'WechatOpenSDK-XCFramework'

  target 'PDXToolsTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'PDXToolsUITests' do
    # Pods for testing
  end

end
